---
import Layout from '@/layouts/Layout.astro';

---

<Layout>

    <div class="flex h-screen">
        <!-- Barra lateral -->
        <aside class="w-64 bg-gray-800 text-white p-4">
            <h1 class="text-2xl font-semibold mb-4">Menú</h1>
            <nav>
                <ul>
                    <li class="mb-2"><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Dashboard</a></li>
                    <li class="mb-2"><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Usuarios</a></li>
                    <li class="mb-2"><a href="#" class="block py-2 px-4 rounded hover:bg-gray-700">Configuración</a></li>
                </ul>
            </nav>
        </aside>

        <!-- Contenido principal -->
        <main class="flex-1 p-4 overflow-y-auto">
            <header class="bg-white shadow-md rounded-lg p-4 mb-4">
                <h2 class="text-xl font-semibold">Bienvenido</h2>
            </header>

            <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <!-- Tarjetas de contenido -->
                <div class="bg-white rounded-lg shadow-md p-4">
                    <h3 class="text-lg font-semibold mb-2">Tarjeta 1</h3>
                    <p>Contenido de la tarjeta 1.</p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-4">
                    <h3 class="text-lg font-semibold mb-2">Tarjeta 2</h3>
                    <p>Contenido de la tarjeta 2.</p>
                </div>

                <div class="bg-white rounded-lg shadow-md p-4">
                    <h3 class="text-lg font-semibold mb-2">Tarjeta 3</h3>
                    <p>Contenido de la tarjeta 3.</p>
                </div>
            </section>
        </main>
    </div>

</Layout>